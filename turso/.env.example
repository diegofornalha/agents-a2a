# Configuração do Agente Turso A2A
PORT=4243
AGENT_NAME=TursoAgent
AGENT_ID=turso-agent-001

# Configuração do Turso Database
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-auth-token

# Configuração A2A Discovery
A2A_DISCOVERY_URL=http://localhost:4240
A2A_DISCOVERY_INTERVAL=30000

# Configuração de Rede
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Configuração de Logs
LOG_LEVEL=info
LOG_FILE=./logs/turso-agent.log

# Configuração de Cache
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600

# Configuração de Sincronização com Claude Flow
CLAUDE_FLOW_SYNC_ENABLED=true
CLAUDE_FLOW_SYNC_INTERVAL=10000

# Configuração de Segurança
JWT_SECRET=your-jwt-secret-key
API_KEY=your-api-key

# Configuração de Performance
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30000
QUERY_TIMEOUT=10000